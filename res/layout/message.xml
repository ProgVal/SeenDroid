<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:layout_width="match_parent"
  android:layout_height="match_parent">
    <TextView android:layout_alignParentRight="true" android:text="TextView" android:id="@+id/message_authorid" android:layout_width="wrap_content" android:layout_height="wrap_content"></TextView>
    <TextView android:layout_toLeftOf="@+id/message_authorid" android:text="title" android:textAppearance="?android:attr/textAppearanceLarge" android:id="@+id/message_title" android:layout_height="wrap_content" android:layout_width="match_parent"></TextView>
    <TextView android:text="summary" android:layout_below="@+id/message_title" android:layout_width="wrap_content" android:id="@+id/message_summary" android:layout_height="wrap_content"></TextView>
    
</RelativeLayout>
